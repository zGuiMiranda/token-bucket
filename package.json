{
  "name": "TokenBucket",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "prod": "cross-env NODE_ENV=prod nodemon",
    "dev": "cross-env NODE_ENV=development nodemon -r tsconfig-paths/register src/main.ts",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
    "container-up": "docker-compose up -d --build --force-recreate",
    "container-down": "docker-compose down -v --remove-orphans"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/swagger": "^9.2.0",
    "@fastify/swagger-ui": "^5.1.0",
    "@types/node": "^22.8.4",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "fastify": "^5.0.0",
    "fastify-swagger": "^5.2.0",
    "fastify-swagger-ui": "^1.0.1",
    "install": "^0.13.0",
    "jest": "^29.7.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "nodemon": "^3.1.7",
    "npm": "^10.9.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.5",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "cross-env": "^7.0.3"
  },
  "jest": {
    "setupFiles": [
      "./test/config/jest.setup.env.ts"
    ],
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "@shared/(.*)": "<rootDir>/src/shared/$1"
    }
  }
}
